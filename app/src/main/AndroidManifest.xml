        <activity
            android:name=".PedidoActivity"
            android:label="@string/title_activity_pedido"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ArticulosActivity"
            android:label="@string/title_activity_articulos"

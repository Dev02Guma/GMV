            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CumpleannoActivity"
            android:label="@string/title_activity_cumpleanno"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BandejaPedidosActivity"
            android:label="@string/title_activity_bandeja_pedidos"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BandejaCobrosActivity"
            android:label="@string/title_activity_bandeja_cobros"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RptHoyActivity"
            android:label="@string/title_activity_rpt_hoy"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".QrActivity"></activity>

        <receiver
            android:name=".ConnectivityReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
    </application>

</manifest>